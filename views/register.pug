extends layout 

block layout-content 
    
    div(class="form-group")
        h1 Welcome to the Register Page
        br
        
        span(class="error") #{ErrorMessage}
        form(action="/u/register", method="post" class="register-form")
            label(for="username") Username
            br
            input(type="text", name="username", placeholder="Username")
            br
            label(for="email") Email
            br
            input(type="text", name="email", placeholder="Email")
            br
            label(for="age") Age
            br
            input(type="number", name="age", placeholder="Age")
            br
            label(for="password") Password
            br
            input(type="password", name="password", placeholder="Password")
            br
            label(for="password-confirm") Confirm Password
            br
            input(type="password", name="confirmPassword", placeholder="Confirm Password")
            br
            div(class="questions")
            label(for="question1") What is your favorite color?
            br
            label(for="question1-1") Red
            input(type="radio", name="question1", value="red")
            label(for="question1-2") Blue
            input(type="radio", name="question1", value="blue")
            label(for="question1-3") Green
            input(type="radio", name="question1", value="green")
            br
            br
            label(for="question2") What is your favorite animal?
            br
            label(for="question2-1") Dog
            input(type="radio", name="question2", value="dog")
            label(for="question2-2") Cat
            input(type="radio", name="question2", value="cat")
            label(for="question2-3") Fish
            input(type="radio", name="question2", value="fish")
            br
            br
            label(for="question3") What is your favorite food?
            br
            label(for="question3-1") Pizza
            input(type="radio", name="question3", value="pizza")
            label(for="question3-2") Pasta
            input(type="radio", name="question3", value="pasta")
            label(for="question3-3") Sushi
            input(type="radio", name="question3", value="sushi")
            br
            input(type="submit", class="submit", value="Register")
            